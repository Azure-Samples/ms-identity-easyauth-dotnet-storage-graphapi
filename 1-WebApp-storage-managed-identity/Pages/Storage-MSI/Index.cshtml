@page
@model WebApp_EasyAuth_DotNet.Pages.Storage_MSI.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>User comments</h1>

<p>
    <a asp-page="Create">Create a new comment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments[0].UserComment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserComment)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
